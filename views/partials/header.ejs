
 <header id="top-header">
    <span class="siteName">
        <img src="/images/site/CSELOGO.png" alt="Logo" class="logo">
        <a href="/" title="Return to home page">CSE MOTORS</a>
    </span>
    <div id="tools">
        <% if (locals.loggedin) { %>
            <!-- Display Welcome and Logout links for logged-in users -->
            <a href="/account" title="Manage your account">Welcome, <%= locals.accountData.account_firstname %></a>
            <a title="Click to log out" href="/account/logout">Logout</a>
        <% } else { %>
            <!-- Display My Account link for guests -->
            <a title="Click to log in" href="/account/login">My Account</a>
        <% } %>
    </div>
</header>
