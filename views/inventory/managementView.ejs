<% if (title) { %>
  <h1><%= title %></h1>
<% } %>
<%- messages() %>

<div class="management-container">
  <ul>
      <li><a href="/inv/add-classification">Add New Classification</a></li>
      <li><a href="/inv/add-inventory">Add New</a></li>
  </ul>
  <h2>Manage Inventory</h2>
  <p>Select Classification</p>
  
  <select id="classification_id" name="classification_id" required>
    <option value="" disabled selected>Select a classification</option>
    <% classifications.forEach(function(classification) { %>
        <option value="<%= classification.classification_id %>">
            <%= classification.classification_name %>
        </option>
    <% }); %>
</select>


  <table id="inventoryDisplay"></table>
  <noscript>JavaScript must be enabled to use this page.</noscript>

  <script src="../../js/inventory.js"></script>
</div>
