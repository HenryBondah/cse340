<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
} %>
<%- messages() %>

<% if (errors && typeof errors.array === 'function') { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
<div class="login-container">
  <form action="/account/login" method="post">
    <p>All fields are required</p>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
    </div>
    <div class="form-group">
      <label for="account_password">Password:</label>
      <input type="password" id="account_password" name="account_password" required 
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
      <input type="checkbox" onclick="togglePasswordVisibility('account_password')"> Show Password
      <div><i><br>Passwords must be a minimum of 12 characters and include 1 capital letter, 1 number, and 1 special character.</i></div>
    </div>
    <button type="submit">Login</button>
    <p>Don't have an account? <a href="/account/register">Register here</a>.</p>
  </form>
</div>