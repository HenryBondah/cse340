<% if (title) { %>
  <h1><%= title %></h1>
<% } %>
<%- messages() %>

<% if (messages && messages.error) { %>
  <div class="error-message">
    <%= messages.error %>
  </div>
<% } %>

<% if (errors && errors.length) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<% if (locals.accountData) { %>
  <h2>Welcome, <%= locals.accountData.account_firstname %>!</h2>
  
  <% if (['Employee', 'Admin'].includes(locals.accountData.account_type)) { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv/">Access Inventory Management</a></p>
  <% } %>

  <% if (locals.accountData.account_type === 'Admin') { %>
      <h3>Classification & Inventory Approval</h3>
      <p><a href="/inv/approve">Pending Approval</a></p>
  <% } %>

  <h3>Account Settings</h3>
  <p><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>
  
<% } else { %>
  <p>You must be logged in to view this page.</p>
<% } %>
