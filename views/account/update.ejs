
        <h1>Update Account Information</h1>
        <% if (messages.error) { %>
            <div class="alert alert-danger"><%= messages.error %></div>
        <% } %>
        <% if (messages.success) { %>
            <div class="alert alert-success"><%= messages.success %></div>
        <% } %>

        <section>
            <form action="/account/update" method="post">
                <h2>Account Update</h2>
                <label for="firstname">First Name:</label>
                <input type="text" id="firstname" name="firstname" value="<%= typeof account_firstname !== 'undefined' ? account_firstname : '' %>" required>

                <label for="lastname">Last Name:</label>
                <input type="text" id="lastname" name="lastname" value="<%= typeof account_lastname !== 'undefined' ? account_lastname : '' %>" required>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= typeof account_email !== 'undefined' ? account_email : '' %>" required>

                <input type="hidden" name="account_id" value="<%= typeof account_id !== 'undefined' ? account_id : '' %>">
                <input type="submit" value="Update Account">
            </form>
        </section>

        <section>
            <form action="/account/changePassword" method="post">            
                <h2>Change Password</h2>
                <label for="newPassword">New Password:</label>
                <input type="password" id="newPassword" name="newPassword" required>
                <p>Password requirements: at least 12 characters long, include uppercase and lowercase letters, a number, and a special character.</p>
                
                <input type="hidden" name="account_id" value="<%= typeof account_id !== 'undefined' ? account_id : '' %>">
                <input type="submit" value="Change Password">
            </form>
        </section>